pipeline {
    agent {
        docker {
            image 'python-docker-agent'
            args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        IMAGE_NAME = "ci-demo-app:${env.BUILD_NUMBER}"
    }

    stages {
        stage("Checkout") {
            steps {
                checkout scm
            }
        }

        stage("Install & Test") {
            steps {
                sh "python -m pip install --upgrade pip"
                sh "pip install -r requirements.txt"
                sh "PYTHONPATH=. pytest -q"
            }
        }

        stage("Build Docker Image") {
            steps {
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage("Run Container") {
            steps {
                sh '''
                    docker rm -f ci-demo-running || true
                    docker run -d --name ci-demo-running -p 5001:5000 ${IMAGE_NAME}
                '''
            }
        }
    }

    post {
        success {
            echo "Build SUCCESS: ${IMAGE_NAME}"
        }
        failure {
            echo "Build FAILED"
        }
    }
}
